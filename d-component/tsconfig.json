{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "ES5",
      "ES6",
      "ES7",
      "dom"
    ],
    "sourceMap": true,
    "jsx": "preserve",
    "declaration": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./package/*"],
      "*": ["*"]
    },
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules"
  ]
}
